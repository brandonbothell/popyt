{
  "compilerOptions": {
    "types": ["@types/node"],
    "noEmit": true,
    "lib": ["es2023"],
    "module": "Node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "./gulpfile.ts",
    "./test/**/*.ts"
  ]
}
